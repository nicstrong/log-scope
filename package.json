{
  "name": "log-scope",
  "version": "1.0.0",
  "description": "A drop-in replacement for console.log with hierarchical namespaces and advanced filtering.",
  "private": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "vitest",
    "test": "vitest run",
    "build": "rimraf dist && tsc --project tsconfig.dist.json",
    "lint": "tsc --noEmit",
    "ci": "npm run lint && npm run build && npm run test",
    "release": "npm run lint && npm run test && npm run build && changeset publish"
  },
  "keywords": [
    "zod",
    "typescript"
  ],
  "author": "Nic Strong ",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nicstrong/log-scope.git"
  },
  "homepage": "https://github.com/nicstrong/log-scope#readme.md",
  "bugs": "https://github.com/nicstrong/log-scope/issues",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  }
}
